<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/list_item_padding"
    android:paddingLeft="@dimen/list_item_padding"
    android:paddingBottom="@dimen/list_item_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            
            android:text="User name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="2015.22.02 22:29" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1" >

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:paddingLeft="@dimen/list_item_padding"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="256 points"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/gtype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Left-Right" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/mbodis/Documents/svab/it/android/git/svb_lgg3_circlecase_rocket_studio/app/src/main/res/layout/adapter_gamestats.xml -->